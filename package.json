{
	"name": "e-commerce",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"predev": "svelte-kit sync",
		"dev": "vite dev",
		"prebuild": "svelte-kit sync",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"typegen": "pocketbase-typegen --db ./pb_data/data.db --out ./src/lib/pocketbase-types.ts",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,css,html}": [
			"prettier --write"
		]
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@playwright/test": "^1.58.1",
		"@sveltejs/adapter-cloudflare": "^7.2.6",
		"@sveltejs/enhanced-img": "^0.9.3",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.18",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.3.1",
		"@types/node": "^25.1.0",
		"@types/sanitize-html": "^2.16.0",
		"@vitest/ui": "^4.0.17",
		"eslint": "^9.39.2",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.2.0",
		"husky": "^9.1.7",
		"jsdom": "^27.4.0",
		"lint-staged": "^16.2.7",
		"pocketbase-typegen": "^1.3.3",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte": "^5.49.1",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0",
		"valibot": "^1.2.0",
		"vite": "^7.2.6",
		"vitest": "^4.0.17"
	},
	"dependencies": {
		"@stripe/stripe-js": "^8.7.0",
		"@tailwindcss/typography": "^0.5.19",
		"@tanstack/svelte-query": "^6.0.18",
		"lucide-svelte": "^0.563.0",
		"pocketbase": "^0.26.8",
		"sanitize-html": "^2.17.0",
		"stripe": "^17.7.0",
		"sveltekit-rate-limiter": "^0.7.0",
		"sveltekit-superforms": "^2.29.1",
		"zod": "^4.3.6"
	},
	"overrides": {
		"cookie": "^0.7.2",
		"tar": "^7.5.6"
	}
}
